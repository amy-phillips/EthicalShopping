{
  "manifest_version": 2,
  "name": "Ethical Shopping Helper",
  "description": "Helps you make ethical shopping decisions on the Sainsburys website based on data from Ethical Consumer Best Buy and Score Tables",
  "version": "0.4",

  "browser_action": {
    "default_icon": {                         
            "32": "images/icon32.png"           
    },
    "default_popup": "popup.html",
    "default_title": "Ethical Shopping Helper"
  },

  "background": {
     "scripts": ["thirdParty/jquery-3.4.0.min.js", "background.js"]
  },

  "content_scripts": [
    {
      "matches": ["https://www.sainsburys.co.uk/*"],
      "js": ["thirdParty/jquery-3.4.0.min.js", "thirdParty/fuzzy.min.js", "sainsburys.js"],
      "css": ["css/ethics.css"]
    }
  ],

  "web_accessible_resources": ["images/icon32.png"],

  "permissions": [
    "https://www.sainsburys.co.uk/*",
    "https://www.ethicalconsumer.org/*",
    "cookies"
  ]
}
